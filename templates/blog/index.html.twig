{% extends 'blog/blog.html.twig' %}

{% block content %}
    <h3 class="pb-3 mb-4 font-italic border-bottom">
        Latest posts
    </h3>
    {% for post in posts %}
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">{{ post.author.name }}</strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="{{ path('blog_post', {id: post.id}) }}">{{ post.title }}</a>
                </h3>
                <div class="mb-1 text-muted">{{ post.publishedAt|date("M d") }}</div>
                <p class="card-text mb-auto">{{ post.summary }}</p>
                <a href="{{ path('blog_post', {id: post.id}) }}">Continue reading</a>
            </div>
        </div>
    {% endfor %}

    <nav class="blog-pagination">
        {% for i in 1..pagesCount %}
            {% if i == currentPage %}
                <a class="btn btn-outline-secondary disabled" href="#">{{ i }}</a>
            {% else %}
                <a class="btn btn-outline-primary" href="{{ path('blog_index_paginated', {page: i}) }}">{{ i }}</a>
            {% endif %}
        {% endfor %}
    </nav>
{% endblock %}
